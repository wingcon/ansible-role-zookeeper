# managed by ansible

{% for default_option in zookeeper_logger_config_options_defaults %}
{% if default_option.state | default('present') == 'present'  %}
{% if default_option.option not in (zookeeper_logger_config_options | json_query('[*].option')) %}
{{ default_option.option }}={{ default_option.value }}
{% endif %}
{% endif %}
{% endfor %}

{% for option in zookeeper_logger_config_options %}
{% if option.state | default('present') == 'present'  %}
{{ option.option }}={{ option.value }}
{% endif %}
{% endfor %}
